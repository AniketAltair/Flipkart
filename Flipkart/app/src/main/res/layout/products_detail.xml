<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProductsDetailActivity">



    <Button
        android:id="@+id/products_detail_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center">


    </Button>






    <Button
        android:id="@+id/products_detail_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/products_detail_image"
        android:backgroundTint="@android:color/white"
        android:text="Product Name"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"

        />
    <Button
        android:id="@+id/products_detail_description"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/products_detail_name"
        android:backgroundTint="@android:color/white"
        android:text="Product Description"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"

        />
    <Button
        android:id="@+id/products_detail_price"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/products_detail_description"
        android:backgroundTint="@android:color/white"
        android:text="Product Price"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"

        />




    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/nnn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:textSize="16sp"
        app:initialNumber="1"
        app:finalNumber="10"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/products_detail_price"
        android:layout_marginTop="10dp"
        >
    </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

    <Button
        android:id="@+id/pd_add_to_cart_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@android:color/holo_purple"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="Add to cart"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"

        />


</RelativeLayout>














